html
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Login
        link(rel="stylesheet", href="../css/estilos.css")
        link(rel="stylesheet", href="../css/estilos_registro.css")

    body
        main.main
            form(action="perfil.html", method="GET", id="form").login
                input(type="submit" value="Registrarse").login__button
                .login__box    
                    label(for="").login__label Nombre*
                    input(type="text" name="nombre" id="nombre").login__input
                .login__box    
                    label(for="").login__label Primer apellido*
                    input(type="text" name="primerApellido" id="primerApellido").login__input
                .login__box    
                    label(for="").login__label Segundo apellido*
                    input(type="text" name="segundoApellido" id="segundoApellido").login__input
                .login__box    
                    label(for="").login__label Tipo identificación*
                    input(type="text" name="tipoId" id="tipoId").login__input
                .login__box    
                    label(for="").login__label Número identificación*
                    input(type="text" name="numeroId" id="numeroId").login__input
                .login__box    
                    label(for="").login__label Fecha de nacimiento
                    input(type="date" name="fecha" id="fecha").login__input
                .login__box    
                    label(for="").login__label Departamento de nacimiento*
                    input(type="text" name="deptonac" id="deptonac").login__input
                .login__box    
                    label(for="").login__label Ciudad de nacimiento*
                    input(type="text" name="ciudadnac" id="ciudadnac").login__input
                .login__box    
                    label(for="").login__label Departamento de residencia*
                    input(type="text" name="deptoResi" id="deptoResi").login__input
                .login__box    
                    label(for="").login__label Ciudad de residencia*
                    input(type="text" name="ciudadResi" id="ciudadResi").login__input
                .login__box    
                    label(for="").login__label Número notaria en la que registra*   
                    input(type="text" name="notaria" id="notaria").login__input
                .login__box    
                    label(for="").login__label Dirección*   
                    input(type="text" name="direccion" id="direccion").login__input
                .login__box    
                    label(for="").login__label Número fijo
                    input(type="text" name="telefono" id="telefono").login__input
                .login__box    
                    label(for="").login__label Número celular*
                    input(type="text" name="celular" id="celular").login__input
                .login__box    
                    label(for="").login__label Correo*
                    input(type="text" name="correo" id="correo").login__input
                .login__box

                    label(for="").login__label Contraseña*
                    input(type="password" name="password" id="password").login__input
                .login__box    
                    label(for="").login__label Confirmar contraseña*
                    input(type="password" name="passwordCon" id="passwordCon").login__input
                

        include footer.pug
        script(src="../JS/confirmar_contrasena.js")
